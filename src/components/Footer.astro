---
import { getNavigation,NAVIGATION, SOCIAL_LINKS, SITE } from '@config/site';
import { Package, Linkedin, Twitter, Facebook } from 'lucide-react';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const navItems = getNavigation(lang);
import logoImage from '@/assets/logo.jpg'; 
import { Image } from 'astro:assets';
---

<footer class="bg-slate-900 text-slate-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-1 space-y-6">
        <a href={getLocalizedPath('/', lang)} class="flex items-center space-x-3 group">
          <!-- <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-linear-to-br from-blue-600 to-teal-600">
            <Package className="w-7 h-7 text-white" />
          </div>
          <span class="text-2xl font-bold text-white">
            {SITE.title}
          </span> -->

          <Image 
          src={logoImage} 
          alt={SITE.title} 
          class="h-10 w-auto object-contain" 
          loading="eager" 
        />
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {t('site.description')}
        </p>
        <div class="flex space-x-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-600 hover:text-white transition-all"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.twitter}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-400 hover:text-white transition-all"
            aria-label="Twitter"
          >
            <Twitter className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.facebook}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-500 hover:text-white transition-all"
            aria-label="Facebook"
          >
            <Facebook className="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          <!-- Quick Links -->
          {t('footer.QuickLinks')}
        </h3>
        <ul class="space-y-3">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          <!-- Services -->
          {t('nav.products')}
        </h3>
        <ul class="space-y-3">
          <li>
            <a href={getLocalizedPath('/products/fire-sealing', lang)} class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              {t('fire.sealing')}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/products/steel-structure', lang)} class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              {t('steel.structure')}
            </a>
          </li>
          <!-- <li>
            <a href={getLocalizedPath('/capabilities', lang)} class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              {t('manufacturing')}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/capabilities', lang)} class="text-sm text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              {t('supply.chain.management')}
            </a>
          </li> -->
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <!-- <h3 class="text-sm font-semibold uppercase tracking-wider text-white mb-6">
          
          {t('footer.GetStarted')}
        </h3> -->
        <!-- <ul class="space-y-3 text-sm">
          <li>
            <a href={getLocalizedPath('/rfq', lang)} class="text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              {t('request.for.quote')}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/facilities', lang)} class="text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              {t('nav.facilities')}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/documentation', lang)} class="text-slate-400 hover:text-blue-400 transition-colors inline-flex items-center group">
              <span class="w-0 group-hover:w-2 h-0.5 bg-blue-400 transition-all mr-0 group-hover:mr-2"></span>
              {t('documentation')}
            </a>
          </li>  -->
        </ul>
        
        <div class="mt-8">
          <a
            href={getLocalizedPath('/rfq', lang)}
            class="inline-flex items-center px-6 py-3 text-sm font-semibold text-white bg-linear-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 rounded-lg shadow-lg hover:shadow-xl transition-all"
          >
            {t('hero.cta.quote')}
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-slate-800">
      <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
        <p class="text-sm text-slate-400">
          &copy; {new Date().getFullYear()} {SITE.author}. All rights reserved.
        </p>
        <div class="flex items-center space-x-6 text-sm">
          <a href={getLocalizedPath('/privacy', lang)} class="text-slate-400 hover:text-blue-400 transition-colors">
            {t('privacy.policy')}
            
          </a>
          <span class="text-slate-700">•</span>
          <a href={getLocalizedPath('/terms', lang)}  class="text-slate-400 hover:text-blue-400 transition-colors">
            {t('terms.of.service')}
          </a>
          <span class="text-slate-700">•</span>
          <a href={getLocalizedPath('/cookies', lang)} class="text-slate-400 hover:text-blue-400 transition-colors">
            {t('cookie.policy')}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>
