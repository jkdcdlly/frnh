---
// 此页面是：首页的设施展示部分

import ImageReveal from '@components/react/ImageReveal';
import { Image } from 'astro:assets';
import shigong1 from '@assets/施工案例/Snipaste_2025-12-10_23-06-06.png';
import shigong2 from '@assets/施工案例/微信图片_20251210110505_463_4.png'
import shigong3 from '@assets/施工案例/微信图片_20251210110935_465_4.png';
import shigong4 from '@assets/施工案例/微信图片_20251210110237_459_4.png';
import shigong5 from '@assets/施工案例/微信图片_20251210110122_458_4.png';
import { useTranslations,getLocalizedPath, getLangFromUrl } from '@/i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-teal-100 text-teal-800 text-sm font-semibold rounded-full">
        {t('ImageGrid.ourinfrastructure')}
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        {t('ImageGrid.worldclass')} <span class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-teal-600">{t('ImageGrid.facilities')}</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        {t('ImageGrid.facilitiesdescription')}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Large featured image -->
      <div class="md:row-span-2">
        <ImageReveal client:load delay={0}>
          <div class="relative h-full group overflow-hidden rounded-2xl shadow-xl">
            <Image 
              src={shigong1}
              alt="Automated warehouse with modern robotics"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              width={1200}
              height={800}
            />
            <div class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"></div>
          </div>
        </ImageReveal>
      </div>

      <ImageReveal client:load delay={0.1}>
        <div class="relative h-64 lg:h-auto group overflow-hidden rounded-2xl shadow-xl">
          <Image 
            src={shigong2}
            alt="Fleet of modern delivery trucks"
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            width={800}
            height={600}
          />
          <div class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"></div>
        </div>
      </ImageReveal>

      <ImageReveal client:load delay={0.2}>
        <div class="relative h-64 lg:h-auto group overflow-hidden rounded-2xl shadow-xl">
          <Image 
            src={shigong3}
            alt="Manufacturing floor with precision equipment"
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            width={800}
            height={600}
          />
          <div class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"></div>
        </div>
      </ImageReveal>

      <div class="lg:row-start-3">        
        <ImageReveal client:load delay={0.3}>
          <div class="lg:col-span-2 relative h-64 lg:h-auto group overflow-hidden rounded-2xl shadow-xl">
            <Image 
              src={shigong4}
              alt="Control center with real-time monitoring"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              width={1200}
              height={600}
            />
            <div class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"></div>
          </div>
        </ImageReveal>
      </div>
      <div class="lg:row-start-2 lg:col-start-2 lg:row-span-2 lg:col-span-2">        
        <ImageReveal client:load delay={0.4}>
          <div class="relative h-64 lg:h-auto group overflow-hidden rounded-2xl shadow-xl">
            <Image 
              src={shigong5}
              alt="Distribution center with sorting systems"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              width={800}
              height={600}
            />
            <div class="absolute inset-0 bg-linear-to-t from-slate-900/80 via-transparent to-transparent"></div>
          </div>
        </ImageReveal>
      </div>
    </div>
    
    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <a 
        href={getLocalizedPath('/usecases', lang)} 
        class="inline-flex items-center px-8 py-4 text-base font-semibold text-white bg-linear-to-r from-teal-600 to-teal-700 hover:from-teal-700 hover:to-teal-800 rounded-lg shadow-lg hover:shadow-xl transition-all group"
      >
        {t('ImageGrid.tourourfacilities')}
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

