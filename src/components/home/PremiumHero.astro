---
import Button from '@/components/ui/Button.astro';
import heroBgImg1 from '@assets/frnh/photo-1586528116311-ad8dd3c8310d.jpg';
import heroBgImg2 from '@assets/施工案例/微信图片_20251210110122_458_4.png';
import {SITE } from '@config/site';
import HeroBackground from '@/components/react/HeroBackground';
import { useTranslations,getLocalizedPath } from '@/i18n/utils';
const heroImages = [
  { src: heroBgImg1.src, alt: "Modern logistics warehouse" },
  { src: heroBgImg2.src, alt: "Automated supply chain" }, // 请替换为 heroBgImg2
  
];
// 接收父组件传来的 lang
const { lang = 'en' } = Astro.props;
const t = useTranslations(lang);

---

<section class="relative h-screen min-h-[500px] flex items-center overflow-hidden">
  <HeroBackground images={heroImages} interval={5000} client:load />

  <!-- Content -->
  <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <div class="inline-flex items-center px-4 py-2 mb-6 bg-linear-to-r from-blue-600 to-teal-600 text-white text-sm font-semibold rounded-full shadow-lg">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
        </svg>
        {t('premiumHero.slogan')}
        <!--  翻译上面的话：行业领先的物流解决方案 -->
      </div>
      
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        <!-- Optimize Your Operations with -->
        {t('hero.title')} 
        <span class="block text-transparent bg-clip-text bg-linear-to-r from-blue-400 via-teal-400 to-blue-400 mt-2">
          {SITE.title}
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-2xl leading-relaxed">
        <!-- Transform your supply chain with our integrated logistics and manufacturing solutions. 
        From warehousing to delivery, we power your success with cutting-edge technology. -->
        {t('hero.subtitle')}
      </p>
      
      
      <div class="flex flex-col sm:flex-row gap-4 mb-12">
        <Button href={getLocalizedPath('/rfq', lang)} size="lg" class="bg-blue-600! hover:bg-blue-700! text-white! shadow-2xl!">
          <!-- Request a Quote -->
          {t('hero.cta.quote')}
        </Button>
        
        <Button href={getLocalizedPath('/use-cases', lang)} size="lg" variant="outline" class="border-2! border-white! text-white! hover:bg-white/10! shadow-2xl!">
          <!-- Explore Solutions -->
          {t('nav.useCases')}
        </Button>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-8 border-t border-white/20">
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">500+</div>
          <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">{t('premiumHero.globalClients')}</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">50M+</div>
          <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">{t('premiumHero.unitsShipped')}</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">99.9%</div>
          <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">{t('premiumHero.onTime')}</div>
        </div>
        <div class="group">
          <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">15+</div>
          <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">{t('premiumHero.facilities')}</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

