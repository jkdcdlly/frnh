---
import { Image } from "astro:assets";

import discoveryImg from "@assets/厂区实力/-139392981_-644036898_-670065618.jpg";
import implementationImg from "@assets/厂区实力/673582483_-1713819689_1672295224.jpg";
import optimizationImg from "@assets/厂区实力/-851394577_-1616383441_-1645369499.jpg";
import supportGrowthImg from "@assets/厂区实力/-2030029167_730982163_-1967713043.jpg";

import { getLangFromUrl, useTranslations,getLocalizedPath } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
interface Step {
  number: number;
  title: string;
  description: string;
  image: ImageMetadata;
  alt: string;
  hoverBorder: string;
  gradient: string;
  textColor: string;
}

const steps = [
  {
    number: 1,
    title: t("ProcessWorkflow.step1.title"),
    description: t("ProcessWorkflow.step1.desc"),
    image: discoveryImg,
    alt: "Business planning and strategy",
    hoverBorder: "hover:border-blue-500",
    gradient: "from-blue-600/90",
    textColor: "text-blue-600",
  },
  {
    number: 2,
    title: t("ProcessWorkflow.step2.title"),
    description: t("ProcessWorkflow.step2.desc"),
    image: implementationImg,
    alt: "Team collaboration and implementation",
    hoverBorder: "hover:border-teal-500",
    gradient: "from-teal-600/90",
    textColor: "text-teal-700",
  },
  {
    number: 3,
    title: t("ProcessWorkflow.step3.title"),
    description: t("ProcessWorkflow.step3.desc"),
    image: optimizationImg,
    alt: "Data analytics and optimization",
    hoverBorder: "hover:border-blue-500",
    gradient: "from-blue-600/90",
    textColor: "text-blue-600",
  },
  {
    number: 4,
    title: t("ProcessWorkflow.step4.title"),
    description: t("ProcessWorkflow.step4.desc"),
    image: supportGrowthImg,
    alt: "Customer support and growth",
    hoverBorder: "hover:border-teal-500",
    gradient: "from-teal-600/90",
    textColor: "text-teal-700",
  },
];

const arrowPath = "M9 5l7 7-7 7";
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div
        class="inline-block px-4 py-2 mb-4 bg-teal-100 text-teal-800 text-sm font-semibold rounded-full"
      >
        <!-- How We Work -->
        {t('ProcessWorkflow.label')}
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        <!-- Our Proven -->
         {t('ProcessWorkflow.title.prefix')}
         <span
          class="text-transparent bg-clip-text bg-linear-to-r from-blue-600 to-teal-600">
          {t('ProcessWorkflow.title.highlight')}
        </span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        <!-- A streamlined approach designed to deliver results from day one, with
        continuous optimization and support. -->
        {t('ProcessWorkflow.description')}
      </p>
    </div>

    <div class="relative">
      <!-- Connection Line (hidden on mobile) -->
      <div
        class="hidden lg:block absolute top-24 left-0 right-0 h-0.5 bg-linear-to-r from-blue-200 via-teal-200 to-blue-200"
      >
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 relative"
      >
        {
          steps.map((step) => (
            <div class="relative h-full">
              <a href={getLocalizedPath('/facilities', lang)}>
              <div
                class={`bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all border-2 border-slate-100 ${step.hoverBorder} relative z-10 flex flex-col h-full`}
              >
                <div class="relative h-48 overflow-hidden">
                  
                  <Image
                    src={step.image}
                    alt={step.alt}
                    class="w-full h-full object-cover"
                    width={800}
                    height={400}
                  />
                  <div
                    class={`absolute top-4 right-4 w-12 h-12 rounded-full bg-white/90 backdrop-blur-sm flex items-center justify-center ${step.textColor} font-bold text-xl shadow-lg`}
                  >
                    {step.number}
                  </div>
                  
                </div>
                <div class="p-8 flex flex-col flex-1">
                  <h3 class="text-xl font-bold text-slate-900 mb-3">
                    {step.title}
                  </h3>
                  <p class="text-slate-600 leading-relaxed flex-1">
                    {step.description}
                  </p>
                  <div
                    class={`mt-6 flex items-center text-sm ${step.textColor} font-semibold`}
                  >
                    {t('ProcessWorkflow.learnMore')}
                    <svg
                      class="w-4 h-4 ml-1"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d={arrowPath}
                      />
                    </svg>
                  </div>
                </div>
              </div>
              </a>
            </div>
          ))
        }
      </div>
    </div>

  </div>
</section>
