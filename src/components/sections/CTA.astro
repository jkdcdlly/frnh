---
import Button from '../ui/Button.astro';
---

<section class="section-padding bg-linear-to-r from-primary-800 to-secondary-700 text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="mb-4 text-3xl font-bold sm:text-4xl">
        Ready to Transform Your Supply Chain?
      </h2>
      <p class="mb-8 text-xl text-primary-100">
        Get started with a free consultation and discover how we can optimize your logistics and manufacturing operations.
      </p>
      <div class="flex flex-col justify-center gap-4 sm:flex-row">
        <Button href="/rfq" variant="secondary" size="lg" class="bg-white text-primary-800 hover:bg-neutral-100">
          Request a Quote
        </Button>
        <Button href="/facilities" variant="outline" size="lg" class="border-white text-white hover:bg-white/10">
          View Facilities
        </Button>
      </div>
    </div>
  </div>
</section>

