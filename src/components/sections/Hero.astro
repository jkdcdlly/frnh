---
import Button from '../ui/Button.astro';
---

<section class="relative overflow-hidden bg-linear-to-br from-primary-900 via-primary-800 to-secondary-800 text-white">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="container mx-auto px-4 py-20 sm:px-6 lg:px-8 lg:py-28 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl mb-6">
        AstroFlow
        <span class="block text-secondary-300">Solutions That Scale</span>
      </h1>
      <p class="mx-auto mb-8 max-w-2xl text-xl text-primary-100">
        Leading provider of optimized logistics and manufacturing solutions with state-of-the-art facilities 
        and industry expertise. Delivering excellence across the supply chain.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/rfq" variant="secondary" size="lg" class="bg-white text-primary-800 hover:bg-neutral-100">
          Request a Quote
        </Button>
        <Button href="/capabilities" variant="outline" size="lg" class="border-white text-white hover:bg-white/10">
          Explore Capabilities
        </Button>
      </div>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute bottom-0 left-0 right-0 h-24 bg-linear-to-t from-white to-transparent"></div>
</section>

