---
const stats = [
  { label: 'Years of Experience', value: '25+' },
  { label: 'Facilities Worldwide', value: '50+' },
  { label: 'Clients Served', value: '1000+' },
  { label: 'Countries', value: '30+' },
];
---

<section class="section-padding bg-primary-800 text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-4">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="mb-2 text-4xl font-bold text-secondary-300 sm:text-5xl">
            {stat.value}
          </div>
          <div class="text-sm uppercase tracking-wider text-primary-100 sm:text-base">
            {stat.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

