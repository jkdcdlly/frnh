---
// 产品列表页

import BaseLayout from "@/layouts/BaseLayout.astro";
import Section from "@/components/ui/Section.astro";
import { Image } from "astro:assets";
import ImageReveal from "@/components/react/ImageReveal";
import { getTechnologies } from "@/data/aboutus";
import { useTranslations } from "@/i18n/utils";
import { defaultLang } from "@/i18n/ui";
import heroBgImg from "@assets/frnh/2901765448440_.pic_hd.jpg";

export { getStaticPaths } from "@/i18n/utils";
import { getLangFromUrl } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
// 获取公司介绍数据
const technologies = getTechnologies(t);
---

<!-- 公司介绍-->
<BaseLayout title={t("nav.aboutour")} lang={lang}>
  <!-- Hero Section -->
  <section
    class="relative h-[50vh] min-h-[400px] flex items-center overflow-hidden"
  >
    <div class="absolute inset-0">
      <Image
        src={heroBgImg}
        alt={t("nav.aboutour")}
        class="w-full h-full object-cover"
        width={2070}
        height={1380}
      />
      <div
        class="absolute inset-0 bg-linear-to-r from-slate-900/95 via-slate-900/80 to-slate-900/50"
      >
      </div>
    </div>
    <div class="container mx-auto relative z-10 px-4 text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
        {t("facilities.our")}
        <span
          class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-teal-400"
          >{t("company")}</span
        >
      </h1>
    </div>
  </section>
  <Section background="white">
    <div class="space-y-24">
      <div
        class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center border-b border-slate-300 pb-24 last:border-0 last:pb-0"
      >
        <div>
          <ImageReveal client:load delay={0}>
            <div
              class="relative aspect-4/3 group overflow-hidden rounded-2xl shadow-xl"
            >
              <Image
                src={heroBgImg}
                alt={t("company")}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                width={800}
                height={600}
              />
            </div>
          </ImageReveal>
        </div>

        {/* Content Side */}
        <div class="animate-fadeInUp">
          {
            technologies.map((tech) => (
              <div class="flex items-start group">
                <div
                  class={`shrink-0 w-12 h-12 rounded-lg bg-linear-to-br ${tech.iconGradient} flex items-center justify-center mr-4 group-hover:scale-110 transition-transform`}
                >
                  <svg
                    class="w-6 h-6 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d={tech.iconPath}
                    />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold  mb-2">{tech.title}</h3>
                  <p class="text-slate-400 leading-relaxed">
                    {tech.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </Section>
</BaseLayout>
