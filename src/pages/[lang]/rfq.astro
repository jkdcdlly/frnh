---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Section from '@/components/ui/Section.astro';
import Card from '@/components/ui/Card.astro';
import RFQForm from '@/components/react/RFQForm';
import { Image } from 'astro:assets';
import { FileText,Shield, CheckCircle2, Phone, Mail, MessageCircle, Award, TrendingUp, Users } from 'lucide-react';

import rfqBgImg from '@/assets/frnh/shakehands.jpg';
import warehouseImg from '@/assets/photo-1563013544-824ae1b704d3.jpg';
import { SITE } from '@/config/site'; 
// 1. 添加 getStaticPaths 以生成多语言路由
import { useTranslations,getLangFromUrl } from '@/i18n/utils';
export { getStaticPaths } from "@/i18n/utils";

// 2. 获取当前语言参数
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title="Request a Quote - Get Started Today" lang={lang}>
  <!-- Hero Section with Professional Image -->
  <section class="relative h-[500px] md:h-[600px] flex items-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0">
      <Image 
        src={rfqBgImg}
        alt="Professional logistics and supply chain management"
        class="w-full h-full object-cover"
        width={1070}
        height={380}
      />
      <div class="absolute inset-0 bg-linear-to-r from-slate-900/95 via-blue-900/90 to-slate-900/85"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
          
        <div class="inline-flex items-center px-4 py-2 mb-6 bg-linear-to-r from-blue-600 to-teal-600 text-white text-sm font-semibold rounded-full shadow-lg animate-fadeInUp">
          <FileText className="w-4 h-4 mr-2" />
          {t('rfq.quotetoday')}
        </div>
        
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight animate-fadeInUp" style="animation-delay: 0.1s">
          {t('hero.cta.quote')}
          
        </h1>
        <p class="text-xl md:text-2xl text-slate-200 mb-8 max-w-3xl mx-auto leading-relaxed animate-fadeInUp" style="animation-delay: 0.2s">
          {t('rfq.description')}
        </p>
        
      

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 pt-8 border-t border-white/20 animate-fadeInUp" style="animation-delay: 0.3s">
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">{t('premiumHero.globalClientsNum')}</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">{t('premiumHero.globalClientsText')}</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">{t('premiumHero.unitsShippedNum')}</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">{t('premiumHero.unitsShippedText')}</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">{t('premiumHero.onTimeNum')}</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">{t('premiumHero.onTimeText')}</div>
          </div>
          <div class="group">
            <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-linear-to-r from-white to-blue-200 mb-1">{t('premiumHero.facilitiesNum')}</div>
            <div class="text-sm text-slate-300 group-hover:text-teal-300 transition-colors">{t('premiumHero.facilitiesText')}</div>
          </div>
        </div>
      </div>
    </div>

  </section>

  <!-- Main Form Section -->
  <Section background="gray">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Form -->
      <div class="lg:col-span-2">
        <!-- <Card>
          <RFQForm client:load />
        </Card> -->
          <!-- Contact Info Card -->
        <Card class="bg-linear-to-br from-blue-50 to-teal-50 border-blue-200">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-lg bg-linear-to-br from-blue-600 to-teal-600 flex items-center justify-center mr-3">
              <Phone className="w-5 h-5 text-white" />
            </div>
            <h3 class="text-xl font-bold text-gray-900">{t('need.help')}</h3>
          </div>
          <div class="space-y-4 text-sm">
            <div class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center shrink-0">
                <Phone className="w-5 h-5 text-blue-600" />
              </div>
              <div>
                <div class="font-semibold text-gray-900">{t('phone')}</div>
                <div class="text-gray-600 font-medium">{SITE.phone}</div>
                <div class="text-gray-500 text-xs">{t('time')}</div>
              </div>
            </div>

            <div class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-10 h-10 rounded-lg bg-teal-100 flex items-center justify-center shrink-0">
                <Mail className="w-5 h-5 text-teal-600" />
              </div>
              <div>
                <div class="font-semibold text-gray-900">{t('email')}</div>
                <div class="text-gray-600 font-medium">{SITE.email}</div>
                <div class="text-gray-500 text-xs">{t('24-hour.response.time')}</div>
              </div>
            </div>

            <div class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center shrink-0">
                <MessageCircle className="w-5 h-5 text-green-600" />
              </div>
              <div>
                <div class="font-semibold text-gray-900">{t('live.chat')}</div>
                <div class="text-gray-600 font-medium">{t('available.on.website')}</div>
                <div class="text-gray-500 text-xs">{t('instant.support')}</div>
              </div>
            </div>
          </div>
        </Card>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
      

        <!-- What to Expect Card 
        <Card class="bg-linear-to-br from-primary-50 via-blue-50 to-secondary-50 border-primary-200">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-lg bg-linear-to-br from-primary-600 to-blue-600 flex items-center justify-center mr-3">
              <Clock className="w-5 h-5 text-white" />
            </div>
            <h3 class="text-xl font-bold text-gray-900">What to Expect</h3>
          </div>
          <ol class="space-y-4 text-sm">
            <li class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <span class="shrink-0 w-8 h-8 rounded-full bg-linear-to-br from-blue-600 to-blue-700 text-white flex items-center justify-center font-bold text-sm shadow-md">1</span>
              <div>
                <span class="text-gray-900 font-semibold block">Response</span>
                <span class="text-gray-600">We'll review your request within 24 hours</span>
              </div>
            </li>
            <li class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <span class="shrink-0 w-8 h-8 rounded-full bg-linear-to-br from-teal-600 to-teal-700 text-white flex items-center justify-center font-bold text-sm shadow-md">2</span>
              <div>
                <span class="text-gray-900 font-semibold block">Consultation</span>
                <span class="text-gray-600">Schedule a call to discuss your needs</span>
              </div>
            </li>
            <li class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <span class="shrink-0 w-8 h-8 rounded-full bg-linear-to-br from-green-600 to-green-700 text-white flex items-center justify-center font-bold text-sm shadow-md">3</span>
              <div>
                <span class="text-gray-900 font-semibold block">Proposal</span>
                <span class="text-gray-600">Receive a detailed quote and timeline</span>
              </div>
            </li>
            <li class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <span class="shrink-0 w-8 h-8 rounded-full bg-linear-to-br from-purple-600 to-purple-700 text-white flex items-center justify-center font-bold text-sm shadow-md">4</span>
              <div>
                <span class="text-gray-900 font-semibold block">Partnership</span>
                <span class="text-gray-600">Begin your logistics journey with us</span>
              </div>
            </li>
          </ol>
        </Card>
-->
        <!-- Trust Indicators -->
        <Card class="bg-linear-to-br from-slate-50 to-gray-50 border-slate-200">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 rounded-lg bg-linear-to-br from-green-600 to-emerald-600 flex items-center justify-center mr-3">
              <Award className="w-5 h-5 text-white" />
            </div>
            <h3 class="text-xl font-bold text-gray-900">{t('why.choose.us')}</h3>
          </div>
          <ul class="space-y-3 text-sm">
            <li class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-8 h-8 rounded-lg bg-green-100 flex items-center justify-center shrink-0">
                <TrendingUp className="w-4 h-4 text-green-600" />
              </div>
              <span class="text-gray-700 pt-1">{t('industry.experience')}</span>
            </li>
            <li class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-8 h-8 rounded-lg bg-blue-100 flex items-center justify-center shrink-0">
                <CheckCircle2 className="w-4 h-4 text-blue-600" />
              </div>
              <span class="text-gray-700 pt-1">{t('on.time.delivery.rate')}</span>
            </li>
            <li class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-8 h-8 rounded-lg bg-purple-100 flex items-center justify-center shrink-0">
                <Shield className="w-4 h-4 text-purple-600" />
              </div>
              <span class="text-gray-700 pt-1">{t('certified.facilities')}</span>
            </li>
            <li class="flex items-start space-x-3 p-3 bg-white rounded-lg hover:shadow-md transition-shadow">
              <div class="w-8 h-8 rounded-lg bg-teal-100 flex items-center justify-center shrink-0">
                <Users className="w-4 h-4 text-teal-600" />
              </div>
              <span class="text-gray-700 pt-1">{t('customer.support')}</span>
            </li>
          </ul>
        </Card>
      </div>
    </div>
  </Section>

 
</BaseLayout>

